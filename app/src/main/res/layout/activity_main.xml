<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181820"
    tools:context=".MVP.view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="45dp"
        android:background="#181820"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="#afafaf"
            android:text="5+10+3"/>

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="5dp"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#383b4a">
            <!--    Line 1-->
            <TableRow>

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="C"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnkurungbuka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="("
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnkurungtutup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text=")"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnPembagian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#a63c46"
                    android:padding="30dp"
                    android:text="รท" />

            </TableRow>

            <!-- lINE 2-->
            <TableRow>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="7"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="8"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="9"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnPerkalian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#a63c46"
                    android:padding="30dp"
                    android:text="x" />

            </TableRow>

            <!--        LINE 3-->
            <TableRow>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="4"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="5"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="6"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnPengurangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#a63c46"
                    android:padding="30dp"
                    android:text="-"
                    android:textSize="10dp" />

            </TableRow>
            <!--lINE 4-->
            <TableRow>
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="1"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="2"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="3"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnTambah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#a63c46"
                    android:padding="30dp"
                    android:text="+"
                    android:textSize="10dp" />
            </TableRow>
        </TableLayout>
        <!--        LINE 5-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:background="#383b4a">

            <TableRow>

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="0"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btntitik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#CCCCCC"
                    android:padding="30dp"
                    android:text="."
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnSamaDengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:backgroundTint="#a63c46"
                    android:padding="30dp"
                    android:text="=" />

            </TableRow>

        </TableLayout>
</LinearLayout>